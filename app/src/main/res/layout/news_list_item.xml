<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/news_item_bg_shape"
    android:paddingHorizontal="10dp"
    android:paddingVertical="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="5dp">

    <TextView
        android:id="@+id/sourceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Source"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:textStyle="italic"
        android:fontFamily="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="7dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:fontFamily="serif"
        android:text="Headlines"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sourceTV"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/articleIV"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/descriptionLinearLayout"
            app:layout_constraintEnd_toStartOf="@id/descriptionLinearLayout"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:id="@+id/descriptionLinearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="3"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/articleIV"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/descriptionTV"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:textColor="#ffffff"
                android:maxLines="5"
                android:fontFamily="serif"
                android:text="Description"
                android:textSize="13.5sp" />

            <TextView
                android:id="@+id/publishedAtTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Published at"
                android:paddingTop="5dp"
                android:fontFamily="serif"
                android:textColor="#ffffff"
                android:textSize="12sp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>